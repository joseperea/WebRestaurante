@model WebRestaurante.ModelsViews.ReservaView
@{
    ViewBag.Title = "Reservar";
}
<div class="container-fluid">
    <br /><br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-12" >
                <blockquote class="col-md-12 blockquote" style="color:#000000; background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg); border-radius:4px;border:2px solid #ffffff">
                    <p title="HyperText Markup Language" class="initialism col-md-11 text-center text-primary" style="font-size:30px; max-width: 100%;height: auto">
                        RESERVAS
                    </p>
                </blockquote>
            </div>
            <div class="col-sm-12">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Atencion!</strong> @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                }
            </div>
            <div class="col-sm-12">
                <div class="tab-content">
                    <button type="button" class="btn btn-default">CANTIDAD DE MESAS DISPONIBLES<span class="badge" style="background:blue"> @ViewBag.CMesas</span></button>
                </div>                
            </div>                        
            <hr />
            <div class="col-sm-7">
                <div class="form-horizontal">
                    <h4 style="color:white"><strong>DATOS PARA RESERVAR</strong></h4>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.MesasOcupadas.Fecha_MesasO, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MesasOcupadas.Fecha_MesasO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MesasOcupadas.Fecha_MesasO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MesasOcupadas.HoraIngreso_MesasO, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MesasOcupadas.HoraIngreso_MesasO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MesasOcupadas.HoraIngreso_MesasO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MesasOcupadas.CPersonas_Mesas, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MesasOcupadas.CPersonas_Mesas, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MesasOcupadas.CPersonas_Mesas, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="form-horizontal">
                    <h4 style="color:white"><strong>DATOS PARA CONFIRMAR LA RESERVA</strong></h4>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Clientes.Nombres_Cli, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Clientes.Nombres_Cli, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombres" } })
                            @Html.ValidationMessageFor(model => model.Clientes.Nombres_Cli, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Clientes.Apellidos_Cli, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Clientes.Apellidos_Cli, new { htmlAttributes = new { @class = "form-control", placeholder = "Apellidos" } })
                            @Html.ValidationMessageFor(model => model.Clientes.Apellidos_Cli, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Clientes.Correo_Cli, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Clientes.Correo_Cli, new { htmlAttributes = new { @class = "form-control", placeholder = "Correo" } })
                            @Html.ValidationMessageFor(model => model.Clientes.Correo_Cli, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Clientes.Telefono_Cli, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Clientes.Telefono_Cli, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefono" } })
                            @Html.ValidationMessageFor(model => model.Clientes.Telefono_Cli, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
               </div>               
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <div class="row">
                        <div class="col-sm-12 col-md-2">
                            @Html.ActionLink("Volver", "Index", "Home", new { }, new { @class = "btn btn-warning", style = "width:100%" })
                        </div>
                        <div class="col-sm-12 col-md-5">
                            <input type="submit" value="Reservar sin menu" class="btn btn-success" id="Reservar" name="RCM" onclick="JavascriptFunction()" style="width:100%" />
                        </div>
                        <div class="col-sm-12 col-md-5">
                            <input type="submit" value="Reservar con menu" class="btn btn-success" id="Reservar" name="RCM" onclick="JavascriptFunction()" style="width:100%" />
                        </div>
                    </div>        
                    @*<button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal" >Reservar</button>*@                                        
                </div>
            </div>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">
                       Seguro Que desea generar la reserva
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <input type="submit" value="Reservar" class="btn btn-success" id="Reservar" />
                    </div>
                </div>
            </div>
        </div>
    }

    <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
         top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
         opacity: .8; filter: alpha(opacity=70);display:none">
        <p style="position: absolute; top: 30%; left: 35%; color: White;">
            Cargando, Generando reserva.... <img src="~/Imagenes/loading_transp.gif">
        </p>
    </div>
</div>
<script type="text/javascript" language="javascript">
function JavascriptFunction() {
    var url = '@Url.Action("Create", "MesasOcupadas")';
    $("#divLoading").show();
    $.post(url, null,
            function (data) {
                $("#PID")[0].innerHTML = data;
                $("#divLoading").hide();
            });
}
</script>
