@model WebRestaurante.Models.Mesas

@{
    ViewBag.Title = "Editar Mesas";
}
<div class="container">
    <br />
    <h2 class="text-info"><strong>Editar Mesas</strong></h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Cod_Mesa)

            <div class="form-group">
                @Html.LabelFor(model => model.Numero_Mesa, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Numero_Mesa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Numero_Mesa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Cod_Est, "Estado", htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                <div class="col-md-10">
                    @Html.DropDownList("Cod_Est", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Cod_Est, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-warning" })
                    <input type="submit" value="Editar" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>