@model WebRestaurante.ModelsViews.DiaMenuView
@{
    ViewBag.Title = "Añadir Dias";
}
    <div class="container-fluid" style="color:white">
        <br />
        <div class="row">

            <div title="@ViewBag.Title" class="col-sm-12 initialism bs-docs-header text-center" style="font-size:30px; max-width: 100%;height: auto; background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg); border-radius:4px;border:2px solid #808080; color:white">
                @ViewBag.Title Al MENU @Model.Menu.Nombre_Menu
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="col-sm-12" style="margin-top:10px">
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Atencion!</strong> @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
            <div class="col-md-6" style="margin-top:20px">
                @using (Html.BeginForm("AddDiaMenu", "Menus", new { Id = Model.Menu.Cod_Menu }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Dia.Nombre_Dia, "Dias", htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("DiasId", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Dia.Nombre_Dia, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Añadir dia" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="pre-scrollable" style="height:300px">
                                <table class="table table-hover">
                                    <tr style="background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg);border-radius:4px;border:2px solid white">
                                        <th>
                                            @Html.DisplayNameFor(model => model.Dia.Nombre_Dia)
                                        </th>
                                        <th></th>
                                    </tr>
                                    @foreach (var item in Model.Dias.ToList())
                                    {
                                        <tr style="color:#d2691e">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre_Dia)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Eliminar", "DeletDiaMenu", new { Diaid = item.Cod_Dia, Menuid = Model.Menu.Cod_Menu }, new { @class = "btn btn-danger" })
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-6" style="margin-top:20px">
                <div class="row">
                    <div class="col-md-12" style="font-size:25px">
                        <strong>Detalle del menu @Model.Menu.Nombre_Menu</strong>
                    </div>
                    <div class="col-md-12" style="margin-top:5px">
                        <dl class="dl-horizontal" style="font-size:16px">
                            <dt style="border-radius:4px;border:2px solid white">
                                @Html.DisplayNameFor(model => model.Menu.Estado_Menu)
                            </dt>
                            <dd class="text-primary text-center" style="background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg);border-radius:4px;border:2px solid white">
                                @if (Model.Menu.Estado_Menu == true)
                                {
                                    <p style="text-transform:uppercase">Disponible</p>
                                }
                                else
                                {
                                    <p style="text-transform:uppercase">No disponible</p>
                                }
                            </dd>

                            <dt style="border-radius:4px;border:2px solid white">
                                @Html.DisplayNameFor(model => model.Menu.TipoMenu.Nombre_TMenu)
                            </dt>

                            <dd class="text-primary text-center" style="background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg);border-radius:4px;border:2px solid white">
                                @Html.DisplayFor(model => model.Menu.TipoMenu.Nombre_TMenu)
                            </dd>

                            <dt style="border-radius:4px;border:2px solid white">
                                @Html.DisplayNameFor(model => model.Menu.Nombre_Menu)
                            </dt>

                            <dd class="text-primary text-center" style="background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg);border-radius:4px;border:2px solid white">
                                @Html.DisplayFor(model => model.Menu.Nombre_Menu)
                            </dd>

                            <dt style="border-radius:4px;border:2px solid white">
                                @Html.DisplayNameFor(model => model.Menu.Descripcion_Menu)
                            </dt>

                            <dd class="text-primary text-center" style="background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg);border-radius:4px;border:2px solid white">
                                @Html.DisplayFor(model => model.Menu.Descripcion_Menu)
                            </dd>

                            <dt style="border-radius:4px;border:2px solid white">
                                @Html.DisplayNameFor(model => model.Menu.Valor_Menu)
                            </dt>

                            <dd class="text-primary text-center" style="background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg);border-radius:4px;border:2px solid white">
                                @Html.DisplayFor(model => model.Menu.Valor_Menu)
                            </dd>

                            <dt style="border-radius:4px;border:2px solid white">
                                @Html.DisplayNameFor(model => model.Menu.Imagen_Menu)
                            </dt>

                            <dd class="text-primary text-center" style="background-image:url(../../Imagenes/f3df92c17f5c1cc3209e60bc3831f3df.jpg);border-radius:4px;border:2px solid white">
                                <img style="border:double white" width="220" height="170" src="@Url.Action("ConvertirImagen","Menus", new { id = Model.Menu.Cod_Menu})" />
                            </dd>

                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.Menu.Cod_Menu }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Guardar", "Index", new { }, new { @class = "btn btn-success" })
        </p>

    </div>