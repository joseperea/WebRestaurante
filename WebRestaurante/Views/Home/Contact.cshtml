@model WebRestaurante.ModelsViews.AboutView
@{
    ViewBag.Title = "Contactenos";
}
<div class="container">
    <div class="row">
@using (Html.BeginForm("Create", "Menus", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

        <h3 class="text-warning">@ViewBag.Message</h3>
        <h2 class="text-primary">@ViewBag.Title.</h2>
        <div class="col-sm-6"   >
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Contatenos.Nombre, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Contatenos.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Contatenos.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Contatenos.Correo, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Contatenos.Correo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Contatenos.Correo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Contatenos.Mensaje, htmlAttributes: new { @class = "control-label col-md-2", style = "color:#ffffff" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Contatenos.Mensaje, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Contatenos.Mensaje, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Volver", "Index", "Home", new { }, new { @class = "btn btn-warning" })
                        <input type="submit" value="Enviar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <address style="color:#ffffff">
                <abbr title="Dirección">Dirección:</abbr>
                @Html.DisplayFor(model => model.Direccion)<br />
                <abbr title="Phone">Telefono:</abbr>
               @Html.DisplayFor(model => model.Telefono)
            </address>

            <address style="color:#000000">
                <strong>Support:</strong>@Html.DisplayFor(model => model.Correo)<br />
                <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
            </address>
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3982.4827298378764!2d-76.48553018569936!3d3.47492289747089!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e30a7dc5ef6e0bb%3A0x136469d55c61ddee!2sCl.+73+%231h-101%2C+Cali%2C+Palmira%2C+Valle+del+Cauca!5e0!3m2!1ses!2sco!4v1474236410011" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>

        </div>
}
    </div>
</div>