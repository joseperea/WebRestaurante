@using PagedList.Mvc;
@model PagedList.IPagedList<WebRestaurante.ModelsViews.UserView>
@{
    ViewBag.Title = "Permisos";
}
<div class="container">
    <br />
    <h2 class="text-info">PERMISOS</h2><br />
    <p>
        @Html.ActionLink("Registar empleado","Register","Account", new { }, new {@class="btn btn-success" })
    </p>    
    <div class="pre-scrollable">
        <table class="table">
            <tr>
                <th class="text-warning">
                   Usuario
                </th>
                <th class="text-warning">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().UserEmail)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="color:#ffffff">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td style="color:#ffffff">
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>
                    <td style="color:#ffffff">
                        @Html.ActionLink("Roles", "Roles", new { id = item.UserId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Eliminar", "Roles", new { id = item.UserId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div>
        Pagina: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), de @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("index", new
   {
       page,
       sortOrde = ViewBag.CurrentSort,
       currentFiltre = ViewBag.CurrentFiltre
   }))
    </div>
</div>

